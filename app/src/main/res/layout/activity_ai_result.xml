<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".bnv1care.AiResultActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        app:title="AI 검사"
        app:titleCentered="true"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_button"
        android:padding="4dp"
        android:layout_margin="12dp">



        <ImageView
            android:id="@+id/iv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ai_eye"
            android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/test_image"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_below="@id/iv"
            android:src="@drawable/icon_gallery"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="의심되는 질병"
                android:padding="8dp" />

            <TextView
                android:id="@+id/result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="질병1 80%"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/result2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="질병2 60%"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="화면상의 데이터로 예측된 결과임으로\n정확도가 떨어질 수 있습니다.\n\n병원을 방문하셔서 정확한 진단을 받아주세요."
        android:gravity="center"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/result1_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="질병1 보러가기"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:paddingTop="12dp"
        android:gravity="right"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/result2_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="질병2 보러가기"
        android:paddingTop="12dp"
        android:layout_marginRight="16dp"
        android:gravity="right"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/btn_result_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="관리수첩에 저장하기"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_save"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>


    </LinearLayout>



</LinearLayout>