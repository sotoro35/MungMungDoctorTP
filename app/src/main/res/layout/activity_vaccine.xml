<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bnv1care.VaccineActivity">
    
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가예방접종"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="12dp" />
    <TextView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignParentRight="true"
        android:textSize="40sp"
        android:layout_alignBottom="@id/tv_add"
        android:layout_marginEnd="16dp"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/tv_add"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_add_vaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </ScrollView>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sv"
        android:background="#9C9191"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_mandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필수예방접종"
        android:layout_below="@id/sv"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_mandatory"
        android:padding="8dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/vac1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="1차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>

        <TextView
            android:id="@+id/vac2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="2차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>
        <TextView
            android:id="@+id/vac3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="3차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll"
        android:padding="8dp">

        <TextView
            android:id="@+id/vac4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="4차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>

        <TextView
            android:id="@+id/vac5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="5차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>

        <TextView
            android:id="@+id/vac6"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="6차 접종"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="#F8E6C4"/>


    </LinearLayout>



</RelativeLayout>