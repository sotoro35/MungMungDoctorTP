<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".bnv1care.NoteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        app:title="관리수첩"
        app:titleTextColor="@color/black"
        app:titleMarginStart="90dp"/>


        <!--     app:mcv_weekDayTextAppearance= 요일에 설정하는거-->
        <!--        app:mcv_weekDayTextAppearance="@style/CalendarViewWeekCustomText" 요일 색바꿈 등 스타일지정-->

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:mcv_selectionColor="#FFA800"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 날짜 : "
        android:layout_marginTop="16dp"
        android:layout_below="@id/calendarview"/>


    <Button
        android:id="@+id/btn_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarview"
        android:layout_alignParentRight="true"
        android:backgroundTint="#FFA800"
        android:text="전체 보기" />

        <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원기록"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn_all"/>

    <TextView
        android:id="@+id/tv_record_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   기록하기+ "
        android:textColor="#FFA800"
        android:layout_alignBottom="@id/tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFA800"
        android:layout_below="@id/tv"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_below="@id/view"
        android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI기록"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/recycler_view_hospital"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFA800"
            android:layout_below="@id/tv1"
            android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_AI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_below="@id/view1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"/>






    </RelativeLayout>



</ScrollView>