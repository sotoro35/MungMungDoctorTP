<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="멍멍닥터"
        android:padding="16dp" />

    <TextView
        android:id="@+id/select_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool"
        android:layout_alignRight="@id/cardview"
        android:layout_marginTop="-1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:text="다른 반려견 보기 +" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_pet"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#F8E6C4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pet_imageUrl"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF9800"
                android:src="@drawable/pet_image"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강아지이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/pet_imageUrl"/>

            <TextView
                android:id="@+id/pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="견종"
                android:textColor="#747474"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/pet_imageUrl"
                android:layout_below="@id/pet_name"/>

            <TextView
                android:id="@+id/pet_birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="#747474"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/pet_imageUrl"
                android:layout_alignParentBottom="true"/>

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#B5B5B5"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pet_birthDate"/>

            <TextView
                android:id="@+id/pet_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="#747474"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/line1"
                android:layout_alignParentBottom="true"/>

            <View
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#B5B5B5"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pet_gender"/>

            <TextView
                android:id="@+id/pet_neutering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중성화여부"
                android:textColor="#747474"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/line2"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI 질병관리"
        android:textColor="#FF6B00"
        android:layout_below="@id/cardview"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8E6C4"
        android:layout_below="@id/subtitle1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:id="@+id/note_ai"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_below="@id/line"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/note"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_button2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/care_note"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리수첩"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eye_ai"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/note"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/bg_button2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 안구질환\n검사하기"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/eyeai"
                android:scaleType="centerCrop"
                android:layout_gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/skin_ai"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@id/eye_ai"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/note"
            android:background="@drawable/bg_button2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="AI 피부질환\n검사하기"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/skinai" />
        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/btn_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="건강백서"
        android:textSize="16sp"
        android:background="@drawable/bg_button3"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/note_ai"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI 질병관리"
        android:textColor="#FF6B00"
        android:layout_below="@id/btn_health"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8E6C4"
        android:layout_below="@id/subtitle2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>