<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/bg_community">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_iv2"
        android:layout_width="28dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/aa"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아멍뭉"
        android:layout_toRightOf="@id/circle_iv2"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/circle_iv2"
        android:src="@drawable/bb"/>


    <LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_below="@id/iv">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favorite"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="1"/>

        <ImageView
            android:id="@+id/iv_watch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"/>

        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@id/linear">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개 뼈 뇸뇸뇸~~~~ 너무 신나보이는 우리 숑이ㅋㅋ 이제 나이도\n많이 먹어서 개나이로 따지면 나보다 으른이 되었지만... 그래도 마\n냥 애기 같아..."
            android:maxLines="3"/>

        <TextView
            android:id="@+id/more_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:textColor="#FFA800"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.04.04"
            android:textColor="#A9A8A8"
            android:textSize="10sp"
            android:layout_margin="4dp"/>

    </LinearLayout>

</RelativeLayout>




